<!--Carousel Wrapper-->
  <h2>Conhe√ßa nossos cursos:</h2>
  <p>Feito por <strong>pessoas</strong> que querem compartilhar
    conhecimento e mudar vidas</p>
  <!--/.Indicators-->
  <!--Slides-->
<div id="multi-item-example" class="carousel slide carousel-multi-item" data-ride="carousel">
  <div class="carousel-inner" role="listbox">
    <!--First slide-->
    <div class="carousel-item active" >
      <% @last_courses.first(4).each do |course| %>
        <div class="col-md-3" style="float:left">
          <div class="card mb-2">
            <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)),  url(<%= cl_image_path(course.photo.key) %>)">
              <h4 class="card-title"><%= link_to "#{course.name}", course_path(course) %></h4>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <div class="carousel-item" >
      <% @last_courses.last(4).each do |course| %>
        <div class="col-md-3" style="float:left">
          <div class="card mb-2">
            <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path(course.photo.key) %>)">
              <h4 class="card-title"><%= link_to "#{course.name}", course_path(course) %></h4>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
    <!--/.First slide-->
    <!--Controls-->
  <div class="controls-top">
    <a class="btn-floating" href="#multi-item-example" data-slide="prev"><i class="fas fa-chevron-left"></i></a>
    <a class="btn-floating" href="#multi-item-example" data-slide="next"><i class="fas fa-chevron-right"></i></a>
  </div>
  <!--/.Controls-->
  <!--/.Slides-->
</div>
