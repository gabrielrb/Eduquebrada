<%= render 'shared/sidebar2' %>
<div class="container mt-4">
  <div class="container pt-5">
    <div class="d-flex justify-content-center">
      <h1 class="mt-5">Relação de Cursos Disponíveis</h1>
    </div>
  </div>

  <br>

  <div class="row">
    <% if @courses.present? %>
      <% @courses.each do |course| %>
        <div class="col-6">
          <div>
            <h1><%= course.name %></h1>
            <p><strong>Category:</strong> <%= course.category %></p>
            <p><strong>Creator:</strong> <%= course.user.name %></p>
            <p><strong>Description:</strong> <%= course.description %></p>
            <p><%= link_to "Cursos Detalhados", course_path(course), class: "btn btn-primary" %></p>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>

  <br>

  <div>
    <%= link_to "Crie um novo curso", new_course_path, class: "btn btn-secondary" %>
  </div>

  <br>

</div>
