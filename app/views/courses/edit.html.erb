<div class="container">
  <div class="mt-4">
    <div class="d-flex justify-content-start">
      <h1>Relação de Cursos Disponíveis</h1>
    </div>  
  </div>
  
  <br>

  <div>
    <% if policy(@course).edit? %>
      <%= simple_form_for(@course) do |f| %>
        <%= f.input :category %>
        <%= f.input :name %>
        <%= f.input :description %>
        <%= f.input :url %>
        <%= f.input :photo, as: :file %>
        <%= f.submit 'Atualização', class: 'btn-primary' %>
      <% end %>
    <% end %>
  </div>
  
  <br>
  
   <div>
    <%= link_to "Retornar aos cursos", course_path(@course), class: "btn btn-primary" %>
  </div>

</div>
