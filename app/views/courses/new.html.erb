<div class="container mt-5">
  <div class="d-flex justify-content-start">
    <h1 class="pt-5">Criar Novo Curso</h1>
  </div>

  <br>

  <div>
    <%= simple_form_for(@course) do |f| %>
      <%= f.input :name %>
      <%= f.input :category %>
      <%= f.input :description %>
      <%= f.input :url %>
      <%= f.submit 'Criar', class: 'btn btn-primary' %>
      <%= link_to "Retorne para os cursos", courses_path, class: "btn btn-primary" %>
    <% end %>
  </div>
  
</div>
