<div class="container mt-5">
  <div class="d-flex justify-content-start">
    <h1 class="pt-5">Criar Quest√£o</h1>
  </div>
  
  <br>

  <div class="mb-3">
    <%= simple_form_for [@course, @quiz] do |f| %>
      <%= f.input :question %>
      <%= f.input :answer_1 %>
      <%= f.input :answer_2 %>
      <%= f.input :answer_3 %>
      <%= f.input :answer_4 %>
      <%= f.input :answer_5 %>
      <%= f.submit 'Criar', class: 'btn btn-primary' %>
