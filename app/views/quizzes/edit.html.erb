<div class="container mt-5">
  <div class="d-flex justify-content-start">
    <h1 class="pt-5">Editar Quest√£o</h1>
  </div>
  
  <br>

  <div>
    <% if policy(@quiz).edit? %>
      <%= simple_form_for(@quiz) do |f| %>
      <%= f.input :question %>
      <%= f.input :answer_1 %>
      <%= f.input :answer_2 %>
      <%= f.input :answer_3 %>
      <%= f.input :answer_4 %>
      <%= f.input :answer_5 %>
      <%= f.submit 'Atualizar', class: 'btn btn-primary' %>
      <%= link_to "Voltar para Teste", course_quizzes_path(@quiz.course), class: "btn btn-primary" %>
      <% end %>
    <% end %>
  </div>

</div>