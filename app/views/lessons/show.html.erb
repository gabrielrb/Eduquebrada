<div class="container" style="margin-top: 9%;">
  <h1><%= @lesson.name %></h1>

  <br>

  <div>
    <div>
      <iframe width="560" height="315" src="<%= @lesson.url %>" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
    </div>
    <div>
      <% if policy(@lesson).create? %>
        <%= @lesson.name %>
        <%= @lesson.description %>
      <% end %>
    </div>

    <div class="align-self-end mr-3">
      <% if current_user == @lesson.course.user %>
        <div>
          <p><%= link_to "Edit lesson", edit_lesson_path, class: "btn btn-primary" %></p>
          <% if policy(@lesson).destroy? %>
            <p><%= link_to "Delete", lesson_path(@lesson), method: :delete, class: "btn btn-primary" %></p>
          <% end %>
          <p><%= link_to "Back to Course", course_path(@lesson.course), class: "btn btn-primary" %></p>
        </div>
      <% else %>
        <p>
          <%= link_to "Back to Course", course_path(@lesson.course), class: "btn btn-primary" %>
        </p>
      <% end %>
    </div>
  </div>

  <div>
    <% @lessons.each do |lesson| %>
      <div>
        <p><%= link_to lesson.name, lesson_path(lesson) %></p>
        <p><%= lesson.description %></p>
        <p><%= lesson.course.name %></p>
      </div>
    <% end %>
  </div>
</div>

